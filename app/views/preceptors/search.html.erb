<h2 style="background-color:lightgreen;width: 80px;"><%= link_to "Home" , root_path%></h2>
<div id="tabs-container">
<ul class="tabs-menu">
    <li class="current"><a href="#tab-1">QUICK SEARCH</a></li>
    <li><a href="#tab-2">LIST OUT ALL PRECEPTORS DETAILS </a></li>
    <li><a href="#tab-3">CREATE NEW PRECEPTOR DETAILS </a></li> 
</ul>
<div class="tab">
    <div id="tab-1" class="tab-content">
          <%= form_tag('/search',  method: :get) %>


         <p>
<%= label_tag 'Enter-ABYASI-ID ==>' %>
<%= text_field_tag "search"  %>
<%= submit_tag "Search"  %> <br/>
***(Please Enter Exact & Full ID Credential)
<table border="3" style="background-color:lightgreen;margin:20px;padding:20px;">
<thead>
<tr>
  <th>Name</th>
  <th>Center</th>
  <th>Abyasi</th>
  <th>Place</th>
  <th>Role</th>
</tr>
</thead>
<tbody>
<% @preceptor.each do |preceptor| %>
  <tr>
    <td><%= preceptor.name %></td>
    <td><%= preceptor.center %></td>
    <td><%= preceptor.abyasi_id %></td>
    <td><%= preceptor.place %></td>
    <td><%= preceptor.role %></td>
  </tr>
<% end %>
</tbody>
</table>
</div>
</div>
<p/>
</div>
    <div id="tab-2" class="tab-content">
         <%=render 'preceptor_index'%>
     
    </div>
    <div id="tab-3" class="tab-content">
         <h2 style="background-color:lightgreen;margin:40px;padding:20px;">
            <%= link_to 'New Preceptor', new_preceptor_path %>
         </h2>
    </div>
     
</div>
</div>
<script type="text/javascript">
$(document).ready(function() {
$(".tabs-menu a").click(function(event) {
    event.preventDefault();
    $(this).parent().addClass("current");
    $(this).parent().siblings().removeClass("current");
    var tab = $(this).attr("href");
    $(".tab-content").not(tab).css("display", "none");
    $(tab).fadeIn();
});
});
</script>